@import 'nib'

main-background = #41454d
main-color = #fff
panel-background = #41454d
panel-color = #c6c6c6
menu-color = #d4cfc7
menu-background = #616167
del-color = #d66
title-color = #c3beb8
title-highlight = #fff
count-color = #58493e
count-background = #95b935
button-background = #d4cfc7
button-color = #616164

html
    height: 100%

body
    color: main-color
    background: main-background
    height: 100%

#content
    height: 100%


#menu
    color: menu-color
    background: menu-background
    margin: 0

    .nav-tabs
        border: none
    .menu-button
        padding: 1em
        color: menu-color
        font-size: 1.5em 
        font-weight: bold
        text-align: center
        cursor: pointer
        &:hover
            background: panel-background
            color: main-color
    li
        display: table-cell
        width: auto
        white-space: nowrap
        float: none
        a
            border: none
            span 
                margin-right: .25em
        &.active
            a
                background: panel-background
                color: main-color
        &#menu-tabs-help
            width: 100%
            a
                text-align: right

#panels
    height: 100%

#panel-main
    color: panel-color
    background: panel-background
    height: 100%

    h1
        font-size: 2em
        font-weight: bolder
        margin-bottom: 1.5em

#panel-feeds
    .tag
        &.tag-open
            color: title-highlight
            .glyphicon-chevron-right
                display: none
        &.tag-close
            color: title-color
            .glyphicon-chevron-down
            .tag-feeds
            .tag-refresh
                display: none
        .tag-title
            font-size: 1.5em
            cursor: pointer
            > div
                display: inline
        .tag-name
            margin: .25em
            font-size: 1.5em
    .feed
        font-size: 1.5em
        cursor: pointer
        color: title-color

        .label
            background: count-background
            color: count-color
            padding: .05em .4em

        > div
            display: inline
            margin: .2em

        .feed-delete
            font-weight: bolder
            color: del-color
        &.feed-to-delete
            color: del-color

        .feed-spinner
        .feed-delete
            visibility: hidden
        &:hover
            .feed-delete
                visibility: visible
        &.feed-loading
            .feed-spinner
                visibility: visible
        &.feed-open
            color: title-highlight

#panel-add-feeds
    padding-top: .5em
    padding-left: 1.5em
    font-size: 1.25em
    .form-group
        margin-bottom: 2em
    input
        height: 2em
        font-size: 1.5em
        width: 50%
    .btn-default
        background: button-background
        color: button-color
        font-size: 1.5em
        font-weight: bolder
        text-shadow: none
        span
            margin-right: .25em
        &:hover
            background: button-color
            color: button-background

#tips
    height: 100%
    color: panel-color
    background: panel-background

