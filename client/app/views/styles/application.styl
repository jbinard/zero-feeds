// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

body.application, input, textarea
    color: #bbb
    background: none repeat scroll 0 0 rgba(30, 30, 30, 0.8)

a
    color: #27aaf2
    text-decoration: none

#content
    padding: 2em


button, input[type=button]
    background-color: inherit

[class^="icon-"], [class*=" icon-"]
    background-image: url("../images/glyphicons-halflings.png")
    background-position: 14px 14px
    background-repeat: no-repeat
    display: inline-block
    height: 14px
    line-height: 14px
    width: 14px
    vertical-align: text-top
    cursor: pointer
    border-radius: 10px 10px 10px 10px
    cursor: pointer
    padding: 10px 15px
    border: 2px solid #666
    &:hover
        border-color: #777

.icon-add
    background-position: -280px 3px

.icon-more
    background-position: -305px -116px

.icon-less
    background-position: -280px -117px

.icon-reload
    background-position: -209px -21px

.icon-delete
    background-position: -304px 3px
    &:hover
        border-color: #700

form
    padding: 0 2em
    input
        padding: .5em
        margin: 1em
        width: 24em
    input[type=button]
        width: 14px
        height: 14px
        padding: 10px 15px
        display: inline-block
    .url-field
        width: 50%
        max-width: 50em
    .tags-field, .title-field
        display: inline-block

button.show-new, button.show-old
    margin: 0
    border-radius: 10px 10px 10px 10px
    cursor: pointer
    padding: 10px 15px
    border: 2px solid #666
    &:hover
        border-color: #777

button.show-new
    display: none

.tag
    margin-top: 1em
    button
        margin-right: .5em

.feeds
    display: inline-block
    vertical-align: top
    max-width: 20%
    margin: 0 .2em
    padding: .5em
    .tag
        cursor: pointer
    .feed
        cursor: pointer
        display: none
        border: 2px solid #666
        &:hover
            border-color: #777
        border-radius: 10px 10px 10px 10px
        padding: .5em
        margin: .5em
        white-space: nowrap
        .buttons
            display: inline-block
        div.title
            overflow: hidden
            text-overflow: ellipsis
            vertical-align: top
            a
                margin: 0 .3em
            a:hover
                text-decoration: none
     .feed.show div.title
            font-size: 1.2em
            font-weight: bold

ul.links
    display: inline-block
    width: 70%
    vertical-align: top
    list-style: none
    li
        border-top: 1px solid #666
        padding: 1em 0
        .buttons
            display: inline-block
            width: 40px
        .description
            padding: .5em
            margin: .5em
            display: none
            border: 1px dotted #666
        &.new
            a:visited
                color: #2b2
        &.old
            display: none
            a
                color: #bbb
            a:visited
                color: #2b2
    &.show-old
        li.old
            display: list-item
