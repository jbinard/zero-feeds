// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

body.application, input, textarea
    color: #bbb
    background: none repeat scroll 0 0 rgba(40, 40, 40, 0.8)
    padding: 0

lightblue = #CDDDFF
grey = #777
blue = #47F
green = #4F7

#content
    padding: 0px

button, input[type=button]
    background-color: inherit

[class^="icon-"]
a [class^="icon-"]
.links [class^="icon-"]
.links a [class^="icon-"]
    border: none
    color: lightblue
    font-size: 24px
    transition: 0.2s all linear

[class^="icon-"]:hover
a [class^="icon-"]:hover
    color: blue

.active
    color: grey
    background: black

[class^="icon-"].active:hover
   menucolor: blue

.main
    width: 100%
    margin: 0
    padding: 0
    background: #2A2A2A
    border: 0
    margin-bottom: 2px
    display: table-cell

    form 
        display: none
        .buttons
            display: inline
        label
            margin-right: 20px
        input
            display: inline-block
            margin: 0 10px 0 0
            padding: 5px
            min-width: 45%
            background: #363636
            border: 1px double #171717

        .url-field
            min-width: 45%
        button
            border: none
            vertical-align: middle

    .help
    .settings
    .new-feed
        padding: 10px 20px

    .save-info
        em
            display: none

.contents
    margin-top: 1em
    display: table-row
    width: 100%


.menu
    display: table-cell
    
    border: 0
    vertical-align: top
    min-width: 200px
    max-width: 300px
    background: #1C1C1C
    margin-top: 0
    margin-right: 2px
    padding: 0
    padding-left: 2px

    h1
        margin: 5px 0

    .buttons
        margin-top: 10px
        margin-bottom: 10px
        cursor: pointer
        margin-right: 0px

        button
            border: none
            font-size: 30px
            padding: 5px 2px
            transition: 0.2s all linear

.feeds
    .tag
        cursor: pointer
        margin-bottom: 1em
        padding: 5px
        
        button
            border: none
            vertical-align: middle

            font-size: 16px
            color: lightblue

            &:hover
                color: blue

        &.show
            .feed
                display: block

        .tag-header
            white-space: nowrap

    .feed
        font-size: .9em;
        display: none
        cursor: pointer
        padding: .2em
        margin: .2em
        white-space: nowrap

        .buttons
            display: inline-block
            vertical-align: middle

        div.title
            padding: 5px
            overflow: hidden
            text-overflow: ellipsis
            vertical-align: top
            a
                margin: 0 .3em
            a:hover
                text-decoration: none
                color: #72fa72

        .loader
            display: none

        &.loading
            .loader
                display: inline
            .count
                display: none

        .icon-delete
            visibility: hidden
            padding-left: 0

        .icon-spin1
            font-size: 12px

        &:hover
            .icon-delete
                visibility: visible
    .feed.show div.title
        background-color: #222
        box-shadow: inset 2px 2px 2px black

.options
    width: 100%

ul.links
    padding: 20px 0
    background: #232323
    display: table-cell
    width: 99%
    vertical-align: top
    list-style: none
    margin-top: 1em

    li
        padding: 1em .5em 0
        margin: 0 1em 1em 1em

        button
        a
            border: none
            color: lightblue
            font-size: 24px
            transition: 0.2s all linear
            padding: 0 5px

        button:hover
        a:hover
            color: blue

        .active
            color: grey

        [class^="icon-"].active:hover
            color: blue



        .buttons
            display: inline-block
            white-space: nowrap
            padding-right: .5em

            button
                border: none
                width: auto

        .description
            padding: .5em
            margin: .5em

            display: none

            a
                font-size: 16px

        &.new
            a:visited
                color: #777

            a:visited
                &:hover
                    color: blue

        &.old
            display: none
            a
                color: lightblue
                text-decoration: none

            a:hover
                color: blue

            a:visited
                color: #777

            a:visited
                &:hover
                    color: blue

    &.show-old
        li.old
            display: list-item

.help
    display: none
    overflow: visible
    p
        font-size: 20px

.description
    box-shadow: 1px 1px 2px #000
    background: black


    p
        font-family: title
        font-size: 16px
        color: #DDD
        padding: 10px

    li
        margin-bottom: 0

#feeds-file
    display: none

.import
    position: absolute
    top: 1.5em
    right: 1.5em
    .import-failed
        padding: 0
        margin: 0
    .imported
        padding: 0
        margin: 0

.icon-import
    cursor: pointer
